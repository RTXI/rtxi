[Unit]
Description=Load analogy_ni_pcimio at boot
After=syslog.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c "if [[ `uname -r` =~ \"xenomai\" ]]; then /usr/xenomai/sbin/analogy_config analogy0 analogy_ni_pcimio; else /usr/sbin/comedi_config comedi0 comedi_ni_pcimio; fi"
ExecStop=/usr/xenomai/sbin/analogy_config -r analogy0 analogy_ni_pcimio
ExecStop=/bin/bash -c "if [[ `uname -r` =~ \"xenomai\" ]]; then /usr/xenomai/sbin/analogy_config -r analogy0 analogy_ni_pcimio; else /usr/sbin/comedi_config comedi0 comedi_ni_pcimio; fi"
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
